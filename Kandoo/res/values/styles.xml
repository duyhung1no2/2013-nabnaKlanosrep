<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/main_color</item>
        <item name="android:backgroundStacked">@color/main_color</item>
        <item name="android:backgroundSplit">@color/main_color</item>
        <item name="android:divider">@color/main_color</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="textViewUnderLine" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>

</resources>